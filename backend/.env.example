# Required
API_KEY=change-me-to-a-random-string

# Database
DB_PATH=/var/lib/waggle/waggle.db

# MQTT
MQTT_HOST=127.0.0.1
MQTT_PORT=1883

# API
API_HOST=127.0.0.1
API_PORT=8000
TRUST_PROXY=false
STATUS_AUTH=false
# CORS_ORIGIN=http://192.168.1.100:3000

# Serial
SERIAL_DEVICE=/dev/ttyUSB0
SERIAL_BAUD=115200

# Timing
MAX_PAST_SKEW_HOURS=72
MIN_VALID_YEAR=2025

# Phase 3 — Admin
ADMIN_API_KEY=change-me-admin-key

# Phase 3 — Camera & ML
MAX_QUEUE_DEPTH=50
DISK_USAGE_THRESHOLD=0.90
MAX_PHOTO_SIZE=204800
PHOTO_DIR=/var/lib/waggle/photos
PHOTO_RETENTION_DAYS=30
# EXPECTED_MODEL_HASH=
DETECTION_CONFIDENCE_THRESHOLD=0.25
ML_MODEL_PATH=/var/lib/waggle/models/yolov8n.pt

# Phase 3 — Cloud Sync (Supabase)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_KEY=your-service-role-key
SYNC_INTERVAL_SEC=300

# Phase 3 — Webhooks
# WEBHOOK_URLS=["https://hooks.slack.com/..."]
WEBHOOK_SECRET=change-me-webhook-secret

# Phase 3 — Weather
WEATHER_PROVIDER=none
# OPENWEATHERMAP_API_KEY=
# WEATHER_LATITUDE=
# WEATHER_LONGITUDE=

# Phase 3 — Local Image Signing
FASTAPI_BASE_URL=http://localhost:8000
# LOCAL_SIGNING_SECRET=
LOCAL_SIGNING_TTL_SEC=600
